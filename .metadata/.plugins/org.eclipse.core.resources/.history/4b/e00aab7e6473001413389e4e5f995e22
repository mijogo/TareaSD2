package cl.utfsm.inf.rmi.controlador;

import cl.utfsm.inf.rmi.intefaces.*;
import java.rmi.registry.*;
import java.io.*;

public class Controlador 
{
	private static String nombre = "Controlador";
	public static void main(String[] args) 
	{
		if (System.getSecurityManager() == null) {
            System.setSecurityManager(new SecurityManager());
        }
        try 
        {
            Registry registry = LocateRegistry.getRegistry(args[0]);
            Token comp = (Token) registry.lookup(nombre);
            int precision = Integer.parseInt(args[1]);
            System.out.println("EjemploCalculoPI: stub obtenido, "
                               + "se ejecutara tarea de calculo de PI con "
                               + precision + " de decimales de precision");
            
        
            CalculoPI tarea = new CalculoPI(precision);
            BigDecimal pi = comp.ejecutarTarea(tarea);
            System.out.println(pi);
            System.out.println("EjemploCalculoPI: fin!");
                                               
                                                
        } catch (Exception e) {
            System.err.println("EjemploCalculoPI: Excepcion:  " + e.getMessage());
            e.printStackTrace();
        }
	}
}
